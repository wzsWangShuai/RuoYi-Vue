<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.mapper.PmMilestoneMapper">
    
    <resultMap type="PmMilestone" id="PmMilestoneResult">
        <result property="milestoneId"    column="milestone_id"    />
        <result property="projId"    column="proj_id"    />
        <result property="milestoneName"    column="milestone_name"    />
        <result property="description"    column="description"    />
        <result property="deadline"    column="deadline"    />
        <result property="status"    column="status"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectPmMilestoneVo">
        select milestone_id, proj_id, milestone_name, description, deadline, status, del_flag, create_by, create_time, update_by, update_time from pm_milestone
    </sql>

    <select id="selectPmMilestoneList" parameterType="PmMilestone" resultMap="PmMilestoneResult">
        <include refid="selectPmMilestoneVo"/>
        <where>  
            <if test="projId != null "> and proj_id = #{projId}</if>
            <if test="milestoneName != null  and milestoneName != ''"> and milestone_name like concat('%', #{milestoneName}, '%')</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="deadline != null "> and deadline = #{deadline}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectPmMilestoneByMilestoneId" parameterType="Long" resultMap="PmMilestoneResult">
        <include refid="selectPmMilestoneVo"/>
        where milestone_id = #{milestoneId}
    </select>

    <insert id="insertPmMilestone" parameterType="PmMilestone" useGeneratedKeys="true" keyProperty="milestoneId">
        insert into pm_milestone
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="projId != null">proj_id,</if>
            <if test="milestoneName != null and milestoneName != ''">milestone_name,</if>
            <if test="description != null">description,</if>
            <if test="deadline != null">deadline,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="delFlag != null and delFlag != ''">del_flag,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null and updateBy != ''">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="projId != null">#{projId},</if>
            <if test="milestoneName != null and milestoneName != ''">#{milestoneName},</if>
            <if test="description != null">#{description},</if>
            <if test="deadline != null">#{deadline},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="delFlag != null and delFlag != ''">#{delFlag},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null and updateBy != ''">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updatePmMilestone" parameterType="PmMilestone">
        update pm_milestone
        <trim prefix="SET" suffixOverrides=",">
            <if test="projId != null">proj_id = #{projId},</if>
            <if test="milestoneName != null and milestoneName != ''">milestone_name = #{milestoneName},</if>
            <if test="description != null">description = #{description},</if>
            <if test="deadline != null">deadline = #{deadline},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="delFlag != null and delFlag != ''">del_flag = #{delFlag},</if>
            <if test="createBy != null and createBy != ''">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where milestone_id = #{milestoneId}
    </update>

    <delete id="deletePmMilestoneByMilestoneId" parameterType="Long">
        delete from pm_milestone where milestone_id = #{milestoneId}
    </delete>

    <delete id="deletePmMilestoneByMilestoneIds" parameterType="String">
        delete from pm_milestone where milestone_id in 
        <foreach item="milestoneId" collection="array" open="(" separator="," close=")">
            #{milestoneId}
        </foreach>
    </delete>
</mapper>